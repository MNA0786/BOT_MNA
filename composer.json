{
    "name": "telegram-bot/movie-bot",
    "description": "PHP based Telegram Movie Bot for Render.com",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "ext-zip": "*"
    },
    "autoload": {
        "files": [
            "index.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "chmod 664 movies.csv users.json bot_stats.json",
            "chmod 775 uploads logs backups",
            "mkdir -p uploads logs backups"
        ],
        "post-update-cmd": [
            "echo 'Setup completed successfully!'"
        ]
    },
    "config": {
        "platform-check": false,
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
