# Security headers
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"

# Rewrite rules for Render
RewriteEngine On

# Allow access to specific files only
RewriteRule ^(index\.php|movies\.csv|users\.json|logs/.*)$ - [L]

# Block access to sensitive files
RewriteRule ^(\.git|\.env|Dockerfile|docker-compose\.yml|composer\.(json|lock))$ - [F]

# Redirect all requests to index.php (for webhook)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Disable directory listing
Options -Indexes

# Set PHP values
php_flag display_errors off
php_value upload_max_filesize 10M
php_value post_max_size 10M
